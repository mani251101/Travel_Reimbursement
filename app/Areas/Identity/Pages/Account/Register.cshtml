<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md">
        <form class="row g-2" id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data"></br>
            </br></br><h2>Adding Employee</h2>
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-md-5">
            <div class="form-floating">
                <input asp-for="Input.Firstname" class="form-control" autocomplete="firstname" aria-required="true" />
                <label asp-for="Input.Firstname"></label>
                <span asp-validation-for="Input.Firstname" class="text-danger"></span>
            </div></div></br>

            <div class="col-md-5">
            <div class="form-floating">
                <input asp-for="Input.Lastname" class="form-control" autocomplete="lastname" aria-required="true" />
                <label asp-for="Input.Lastname"></label>
                <span asp-validation-for="Input.Lastname" class="text-danger"></span>
            </div></div></br>

            <div class="col-md-5">
            <div class="form-floating">
                <input asp-for="Input.DateofBirth" class="form-control" aria-required="true" type="date" value="@Model.Input.DateofBirth.ToString("dd-mm-yyyy")"/>
                <label asp-for="Input.DateofBirth"></label>
                <span asp-validation-for="Input.DateofBirth" class="text-danger"></span>
            </div></div></br>

            <div class="col-md-5">
               <div class="form-group">
                    <label>Gender:</label>
                    <div class="form-check">
                        <input asp-for="Input.Gender" type="radio" value="Male" class="form-check-input" />
                        <label asp-for="Input.Gender" class="form-check-label">Male</label>
                    </div>
                    <div class="form-check">
                        <input asp-for="Input.Gender" type="radio" value="Female" class="form-check-input" />
                        <label asp-for="Input.Gender" class="form-check-label">Female</label>
                    </div>
                </div>
            </div></br>

            <div class="col-md-5">
            <div class="form-floating">
                <input asp-for="Input.PhoneNumber" class="form-control" autocomplete="PhoneNumber" aria-required="true" />
                <label asp-for="Input.PhoneNumber"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div></div></br>

            <div class="col-md-5">
            <div class="form-floating">
                <input type="file" asp-for="Input.ProfilePictureFile" class="form-control" accept="image*/"/>
				@* <label asp-for="Input.ProfilePicture"></label> *@
                <span asp-validation-for="Input.ProfilePictureFile" class="text-danger"></span>
            </div></div></br>

            <div class="col-md-5">
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div></div></br>

            <div class="col-md-5">
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div></div></br>

            <div class="col-md-5">
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div></div></br>

            <div class="col-md-5">
            <div class="form-floating">
                <select asp-for="Input.Role" asp-items="@Model.Input.Rolelist" class="form-select" aria-required="true">
                 <option disabled selected>select role</option>
                </select>
                <span asp-validation-for="Input.Role" class="text-danger"></span>
            </div></div></br>
            <div class="col-md-2" style="margin-left: 1%;">
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button></div>
        </form>
    </div>
