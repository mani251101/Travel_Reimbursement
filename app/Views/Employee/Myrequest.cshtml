@using Reimbursementform.Models;
@model IEnumerable<Reimbursementforms>

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="" />
        <meta name="author" content="" />
        <title>Travel Reimbursement</title>
        <link href="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/style.min.css" rel="stylesheet" />
        <link href="css/styles.css" rel="stylesheet" />
        <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
    </head>
    <body class="sb-nav-fixed">
        <nav class="sb-topnav navbar navbar-expand navbar-dark bg-Light">
            <!-- Navbar Brand-->
            <a class="navbar-brand ps-3" href="Index.cshtml">Travel Reimbursement</a>
            <div class="navbar-brand ps-3" style="margin-left: 58%;">
            <Partial name="_LoginPartial"/>
            </div>
        </nav>
        <div id="layoutSidenav">
            <div id="layoutSidenav_nav">
                <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                    <div class="sb-sidenav-menu">
                        <div class="nav"></br>

                            <a class="nav-link" asp-action="Profile" asp-controller="Employee">
                                <div class="sb-nav-link-icon"><i class="fas fa-user-alt"></i></div>
                                Profile
                            </a>

                            <a class="nav-link" asp-action="Reimbursementform" asp-controller="Employee">
                                <div class="sb-nav-link-icon"><i class="fas fa-file"></i></div>
                                Reimbursement
                            </a>

                            <a class="nav-link" asp-action="Myrequest" asp-controller="Employee">
                                <div class="sb-nav-link-icon"><i class="fas fa-clock"></i></div>
                                My Request
                            </a>
                            
							<a class="nav-link" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                <div class="sb-nav-link-icon"><i class="fas fa-sign-out-alt"></i></div> 
                                Logout
                            </a>

                            <div class="collapse" id="collapsePages" aria-labelledby="headingTwo" data-bs-parent="#sidenavAccordion">
                                <nav class="sb-sidenav-menu-nested nav accordion" id="sidenavAccordionPages"> 
                                </nav>
                            </div>
                    </div>
                </nav>
            </div>
            <div id="layoutSidenav_content">
                <main>
                    <div class="container-fluid">
<div class="row">
    <div class="col-md-10">
</div>
</div>
</br>
<div class="head-title">
				<div class="left">
				</div>
			</div></br>
<div class="table-item">
				<div class="order">
					<div class="head">
						<h3>My Request</h3>
					</div>
					<table>
						<thead>
							<tr>
								<th>Form Id</th>
                                <th>Name</th>
                                <th>Email Id</th>
                                <th>Amount</th>
                                <th>Purpose</th>
                                <th>Date</th>
								<th>Receipt</th>
                                <th>Status</th>&nbsp;
							</tr>
						</thead>
						<tbody>
                    @foreach (var p in Model)
                    {
							<tr>
								<a>
								<td>@p.FormId</td>
                                <td>@p.Name</td>
                                <td>@p.EmailId</td>
                                <td>@p.Amount</td>
                                <td>@p.Purpose</td>
								<td>@p.Date.ToString("dd/MM/yyyy")</td>
								<td>
									<a href="~/Receipt/@p.Receipt"><img src="~/Images/@p.Receipt" style="cursor: pointer;" width="50"></a>
								</td>
								<td><span class="status completed">@p.Status</span></td>
								</a>
							</tr>
                    }
						</tbody>
					</table>
				</div>
</div>
                </main>
            </div>
        </body>
</html>
<style>
    td,th{
        padding: 30px;
    }
</style>